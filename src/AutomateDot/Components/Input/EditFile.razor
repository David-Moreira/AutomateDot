<fieldset class="fieldset">
    <legend class="fieldset-legend">@Caption</legend>
    @if (ImageOnly)
    {
        <InputFile id="@Id" disabled="@Disabled" accept="image/*" capture="environment" OnChange="OnChange" class="@($"file-input  w-full max-w-xs file-input-primary {Class}")" />
        @ChildContent
    }
    else
    {
        <InputFile id="@Id" disabled="@Disabled" OnChange="OnChange" class="@($"file-input  w-full max-w-xs file-input-primary {Class}")" />
        @ChildContent
    }

</fieldset>

@code {
    [Parameter] public EventCallback<InputFileChangeEventArgs> OnChange { get; set; }
    [Parameter] public string Caption { get; set; } = string.Empty;
    [Parameter] public string Id { get; set; } = string.Empty;
    [Parameter] public string Class { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public bool ImageOnly { get; set; }
    [Parameter] public bool Disabled { get; set; }

}